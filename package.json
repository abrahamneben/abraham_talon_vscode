{
  "name": "merge-resolver",
  "displayName": "MergeResolver",
  "description": "Resolve merge conflicts in text editor view.",
  "version": "0.0.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/abrahamneben/merge_resolver.git"
  },
  "publisher": "Abraham Neben",
  "engines": {
    "vscode": "^1.98.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:merge_resolver.acceptConflictSide",
    "onCommand:merge_resolver.rejectConflictSide",
    "onCommand:merge_resolver.acceptBothSides",
    "onCommand:merge_resolver.rejectBothSides",
    "onCommand:merge_resolver.gotoNextConflict"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "merge_resolver.acceptConflictSide",
        "title": "Merge Resolver: Accept Conflict Selection Side"
      },
      {
        "command": "merge_resolver.rejectConflictSide",
        "title": "Merge Resolver: Reject Conflict Selection Side"
      },
      {
        "command": "merge_resolver.acceptBothSides",
        "title": "Merge Resolver: Accept Both Conflict Sides"
      },
      {
        "command": "merge_resolver.rejectBothSides",
        "title": "Merge Resolver: Reject Both Conflict Sides"
      },
      {
        "command": "merge_resolver.gotoNextConflict",
        "title": "Merge Resolver: Go to Next Conflict"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.98.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.17.0",
    "@typescript-eslint/parser": "^8.17.0",
    "eslint": "^9.16.0",
    "typescript": "^5.7.2",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}